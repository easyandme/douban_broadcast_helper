{
	"manifest_version":2,

	"name":"Douban Broadcast Helper",
	"description":"Adds functionality to Douban's homepage broadcast feed",
	"version":"1.1",

	"page_action": {
		"default_icon":"icon.png",
		"default_title":"Douban Broadcast Helper"
	},

	"background":{
		"scripts":["eventPage.js"],
		"persistent":false
	},

	"content_scripts":[
		{
			"matches":["https://www.douban.com/","https://www.douban.com/?p=*"],
			"js":["jquery-1.10.2.js","broadcast_helper.js"],
			"css":["broadcast_helper.css"]
		}
	],

	"permissions":[
		"tabs",
		"storage",
		"https://www.douban.com/*"
	]

		
}